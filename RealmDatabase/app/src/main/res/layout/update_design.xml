<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#102196F3">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update the data"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#673AB7"
        android:layout_margin="20dp"
        android:id="@+id/text_update_data"/>


    <!-- For Person Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_update_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxStrokeColor="#ff00"
        android:hint="Person Name"
        app:hintTextColor="#009688"
        android:id="@+id/text_input_p_name_update"
        android:layout_margin="15dp">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/edit_text_name_update"

            />



    </com.google.android.material.textfield.TextInputLayout>


    <!-- For Phone Number -->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_input_p_name_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxStrokeColor="#ff00"
        android:hint="Phone Number"
        app:hintTextColor="#009688"
        android:id="@+id/text_input_p_phone_number_update"
        android:layout_margin="15dp">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/edit_text_phone_number_update"

            />






    </com.google.android.material.textfield.TextInputLayout>



    <!-- For Age -->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_input_p_phone_number_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxStrokeColor="#ff00"
        android:hint=" Age "
        app:hintTextColor="#009688"
        android:id="@+id/text_input_p_age_update"
        android:layout_margin="15dp">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/edit_text_age_update"

            />



    </com.google.android.material.textfield.TextInputLayout>


    <!-- For Email -->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_input_p_age_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxStrokeColor="#ff00"
        android:hint=" Email "
        app:hintTextColor="#009688"
        android:id="@+id/text_input_p_email_update"
        android:layout_margin="15dp">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/edit_text_email_update"

            />



    </com.google.android.material.textfield.TextInputLayout>


    <!-- For Password -->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_input_p_email_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxStrokeColor="#ff00"
        android:hint=" Email Password"
        app:hintTextColor="#009688"
        android:id="@+id/text_input_p_password_update"
        android:layout_margin="15dp">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/edit_text_password_update"

            />



    </com.google.android.material.textfield.TextInputLayout>




    <!-- For Add Data -->


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Update Data"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="40dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/text_input_p_password_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#009688"
        android:id="@+id/update_btn"/>




</androidx.constraintlayout.widget.ConstraintLayout>