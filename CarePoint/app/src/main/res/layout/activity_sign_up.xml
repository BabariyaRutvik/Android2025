<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/carepoint_light_bg"
    tools:context=".HealthActivity.SignUpActivity">


    <!-- Top Curve bg -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/top_curve_bg"
        android:scaleType="fitXY"
        android:id="@+id/top_curve"
        />


    <!-- Logo -->


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/medical_shield"
       android:id="@+id/medical_shield_image"
        />



    <!-- Title -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CarPoint"
        android:layout_below="@id/medical_shield_image"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/carepoint_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/text_title"/>



    <!-- Sub title -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:text="Create an Account"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/text_sub_title"/>





</RelativeLayout>
