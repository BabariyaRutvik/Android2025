<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- Product image -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:background="@drawable/round_bg"
            android:clipToOutline="true"
            android:id="@+id/image_product"
            />



        <!-- Product title -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leptop"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="13dp"
            android:id="@+id/title_product"
            />



        <!-- Price -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 89,999"
            android:textColor="@color/blue_500"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:id="@+id/price_product"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <!-- Category -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="7dp"
                android:background="@drawable/chip_bg"
                android:layout_marginRight="10dp"
                android:id="@+id/category_product"
                />



            <!-- Rating -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.7"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="7dp"
                android:background="@drawable/chip_blue"
                android:id="@+id/rating_product"

                />



        </LinearLayout>



        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:id="@+id/description_product"
            />





        <!-- DESCRIPTION BOX -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This product is made from premium material..."
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="4dp"/>

        <!-- BUY BUTTON -->
        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Buy Now"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="@color/blue_500"
            android:textColor="#FFFFFF"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>