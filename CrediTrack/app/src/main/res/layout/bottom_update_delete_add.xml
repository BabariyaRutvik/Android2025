<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="6dp"
    android:background="@drawable/bottom_background">

    <!-- Add Payment -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:background="?selectableItemBackground"
        android:id="@+id/add_payment_layout">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/add_loan"
            android:id="@+id/image_loan_add"
            app:tint="@color/sky_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Payment "
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textColor="@color/navy_blue"
            android:textSize="18sp"
            android:id="@+id/text_loan_add"
            />


    </LinearLayout>

    <!-- Edit Payment -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:background="?selectableItemBackground"
        android:id="@+id/edit_loan_layout">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/edit_loan_cred"
            app:tint="@color/sky_blue"
            android:id="@+id/image_loan_edit"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Payment"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textColor="@color/navy_blue"
            android:textSize="18sp"
            android:id="@+id/text_loan_edit"
            />


    </LinearLayout>


    <!-- Delete the Payment  or loan-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:background="?selectableItemBackground"
        android:id="@+id/delete_loan_layout">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete_loan_cred"
            app:tint="@color/sky_blue"
            android:id="@+id/image_loan_delete"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Payment"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textColor="@color/navy_blue"
            android:textSize="18sp"
            android:id="@+id/text_loan_delete"
            />


    </LinearLayout>



</LinearLayout>