<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/alice_white"
    tools:context=".CredActivity.CredFragment.PasswordChangeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        >



        <!-- Title -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:layout_marginBottom="20dp"
            android:id="@+id/text_change_password"
            />




        <!-- Current Password -->


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Password"
            android:id="@+id/current_password_layout"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/navy_blue"
            app:boxStrokeWidth="1dp"
            android:layout_margin="16dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:startIconDrawable="@drawable/lock_cred"
            app:startIconTint="@color/sky_blue"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_current_password"
                android:inputType="textPassword"
                android:paddingStart="50dp"

                />
        </com.google.android.material.textfield.TextInputLayout>




        <!-- New Password -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/navy_blue"
            app:boxStrokeWidth="1dp"
            android:layout_margin="16dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:startIconDrawable="@drawable/lock_cred"
            app:startIconTint="@color/sky_blue"
            android:id="@+id/new_password_layout"
            >



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_new_password"
                android:inputType="textPassword"
                android:paddingStart="50dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Confirm Password -->


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/navy_blue"
            app:boxStrokeWidth="1dp"
            android:layout_margin="16dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:startIconDrawable="@drawable/password"
            app:startIconTint="@color/sky_blue"
            android:id="@+id/confirm_password_layout"
            >



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_conform_password"
                android:inputType="textPassword"
                android:paddingStart="50dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Save Password Button -->

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save Password"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_save_password"
            />


    </LinearLayout>


</ScrollView>