<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="9dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_gray"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@color/white">


        <!-- User icon -->

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_person_24"
            android:background="@drawable/bg_circle"
            android:padding="10dp"
            android:id="@+id/image_user_add"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutvik Babariya"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/navy_blue"
                android:id="@+id/text_person_name"
                />


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="28 November, 2025"
               android:layout_marginTop="3dp"
               android:textColor="@color/gray"
               android:textSize="13sp"
               android:id="@+id/text_date"
               />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Given "
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_loan_type"
                android:gravity="center"
                android:id="@+id/text_loan_type"
                />



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 5,000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:id="@+id/text_amount"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>