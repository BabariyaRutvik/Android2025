<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0097A7"
    android:fitsSystemWindows="true"
    tools:context=".Add_List_Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Data"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/text_add_data"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_add_data"
        android:layout_margin="15dp"
        android:hint="Enter Your Name"
        android:background="@drawable/update_edt"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/edt_add_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_add_name"
        android:layout_margin="15dp"
        android:hint="Enter Your Age"
        android:background="@drawable/update_edt"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/edt_add_age"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_add_age"
        android:layout_margin="15dp"
        android:hint="Enter Your Phone Number"
        android:background="@drawable/update_edt"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/edt_add_phone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_add_phone"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#F57C00"
        android:text="Add Data"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/add_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>