<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0288D1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Data"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/text_update_data"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_update_data"
        android:layout_margin="15dp"
        android:hint="Enter Your Name"
        android:background="@drawable/update_edt"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/edt__update_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt__update_name"
        android:layout_margin="15dp"
        android:hint="Enter Your Age"
        android:background="@drawable/update_edt"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/edt_update_age"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_update_age"
        android:layout_margin="15dp"
        android:hint="Enter Your Phone Number"
        android:background="@drawable/update_edt"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/edt_update_phone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_update_phone"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#F57C00"
        android:text="Update Data"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/update_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>