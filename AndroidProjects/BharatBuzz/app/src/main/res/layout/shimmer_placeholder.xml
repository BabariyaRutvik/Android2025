<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <View
        android:id="@+id/imgPlaceholder"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#DDDDDD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titlePlaceholder"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:background="#DDDDDD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgPlaceholder"
        app:layout_constraintTop_toTopOf="@id/imgPlaceholder" />

    <View
        android:id="@+id/titlePlaceholder2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:background="#DDDDDD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgPlaceholder"
        app:layout_constraintTop_toBottomOf="@id/titlePlaceholder" />

    <View
        android:id="@+id/sourcePlaceholder"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#DDDDDD"
        app:layout_constraintStart_toEndOf="@id/imgPlaceholder"
        app:layout_constraintTop_toBottomOf="@id/titlePlaceholder2" />

</androidx.constraintlayout.widget.ConstraintLayout>
