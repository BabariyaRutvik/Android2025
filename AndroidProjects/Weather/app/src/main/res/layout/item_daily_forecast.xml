<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Mon"
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_daily_weather"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_day"
        android:src="@drawable/ic_sun_cloud" />

    <TextView
        android:id="@+id/tv_daily_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_daily_weather"
        android:text="Mostly clear"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_daily_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="20 / 16"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

</RelativeLayout>
