<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/mahindra_card"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            >


            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:id="@+id/mahindra_image"
                android:contentDescription="BMW"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/mahindra_image"
                android:layout_marginStart="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/blue"
                    android:id="@+id/text_mahindra_name"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price : "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/teal"
                    android:id="@+id/text_mahindra_price"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Launch Year"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:textSize="12sp"
                    android:layout_gravity="end|bottom"
                    android:id="@+id/text_mahindra_launch_year"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mahindra_image"
                android:layout_margin="10dp"
                android:text="Description"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                android:textColor="@color/sky_blue"
                android:id="@+id/text_short_mahindra_description"/>


        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>