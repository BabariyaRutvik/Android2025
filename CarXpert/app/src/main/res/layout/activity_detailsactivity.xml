<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29388E3C"
    tools:context=".CarActivity.Detailsactivity">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/full_screen_card"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        android:layout_margin="15dp">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:scaleType="fitXY"
               android:src="@mipmap/ic_launcher"
               android:id="@+id/image_car"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:text="Car Name"
               android:textStyle="bold"
               android:textSize="20dp"
               android:id="@+id/text_car_name"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Car Price"
               android:layout_gravity="start"
               android:textStyle="bold"
               android:textColor="#ff0000"
               android:textSize="15sp"
               android:id="@+id/text_car_price"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Car Launch Year"
               android:textSize="10dp"
               android:layout_gravity="end"
               android:layout_marginBottom="25dp"
               android:textColor="#00796B"
               android:textStyle="bold"
               android:id="@+id/text_car_launch_year"/>



       </LinearLayout>




    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>