<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaPlayer"
    android:layout_marginTop="30dp">



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/play"
        android:id="@+id/image_play"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/image_play"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:src="@drawable/pause"
        android:id="@+id/image_pause"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/image_pause"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:src="@drawable/stop"
        android:id="@+id/image_stop"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Open Video"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:id="@+id/text_video"/>




</androidx.constraintlayout.widget.ConstraintLayout>