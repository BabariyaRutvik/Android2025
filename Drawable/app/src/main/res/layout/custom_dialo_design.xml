<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1976D2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/baseline_cloud_done_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/image_custom_dialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_custom_dialog"
        android:layout_margin="6dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/liner_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SucessFully"
            android:textStyle="bold"
            android:textSize="34sp"
            android:gravity="center"
            android:textColor="#1976D2"
            android:layout_margin="12dp"
            android:id="@+id/text_sucess"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Order Has been Placed Sucessfully"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/text_order"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1976D2"
            android:text="Okay"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/button_okay"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>