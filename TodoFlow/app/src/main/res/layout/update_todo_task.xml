<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="25dp"
    app:cardElevation="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Title -->
        <TextView
            android:id="@+id/text_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Task"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_update_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify your existing task details"
            android:textColor="#777777"
            android:textSize="14sp"
            android:layout_marginBottom="18dp" />

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_update_description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="18dp"
            app:boxCornerRadiusTopEnd="18dp"
            app:boxCornerRadiusBottomStart="18dp"
            app:boxCornerRadiusBottomEnd="18dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_update_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Task Description"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="#444444"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_update_category"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="18dp"
            app:boxCornerRadiusTopEnd="18dp"
            app:boxCornerRadiusBottomStart="18dp"
            app:boxCornerRadiusBottomEnd="18dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_update_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="#444444"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Priority Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#111111"
            android:layout_marginTop="6dp" />

        <!-- Priority Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_update_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_update_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:chipBackgroundColor="#E53935"
                app:chipCornerRadius="14dp"
                android:padding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_update_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:chipBackgroundColor="#FF9800"
                app:chipCornerRadius="14dp"
                android:padding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_update_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:chipBackgroundColor="#4CAF50"
                app:chipCornerRadius="14dp"
                android:padding="10dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Due Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_update_due_date"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="18dp"
            app:boxCornerRadiusTopEnd="18dp"
            app:boxCornerRadiusBottomStart="18dp"
            app:boxCornerRadiusBottomEnd="18dp"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_update_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Due Date"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="#444444"
                android:focusable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_update_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/button_outline"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginEnd="10dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_update_task"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Update"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/button_bg" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
