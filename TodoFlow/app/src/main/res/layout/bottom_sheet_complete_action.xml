<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    android:layout_margin="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Selected Task"
            android:textColor="#111111"
            android:paddingBottom="12dp"
            android:id="@+id/bottom_title" />

        <!-- Marking as a UnComplete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/bottom_item_bg"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/unchacked"
                app:tint="#009688"
                android:id="@+id/image_unchacked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Mark as a Uncomplete"
                android:textSize="16sp"
                android:textColor="#111111"
                android:textStyle="bold"
                android:id="@+id/text_uncomplete" />




        </LinearLayout>

        <!-- Edit Task -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/bottom_item_bg"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/edit"
                android:id="@+id/image_edit"
                app:tint="#3D6BFF"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Edit Task"
                android:textSize="16sp"
                android:textColor="#111111"
                android:textStyle="bold"
                android:id="@+id/text_edit" />


        </LinearLayout>

        <!-- Delete Task -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/bottom_item_bg"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete"
                android:id="@+id/image_delete_task"
                app:tint="#FF0000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Delete Task"
                android:textSize="16sp"
                android:textColor="#111111"
                android:textStyle="bold"
                android:id="@+id/text_delete_task" />


        </LinearLayout>




    </LinearLayout>

</com.google.android.material.card.MaterialCardView>